# ==============================================
# ATS-IA Environment Variables Template
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Database Configuration
DATABASE_URL=postgresql+psycopg2://ats_user:YOUR_SECURE_DB_PASSWORD@db:5432/ats

# Redis/Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# JWT Secret (CRITICAL: Generate a strong random secret!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=CHANGE_ME_TO_A_RANDOM_STRING_AT_LEAST_32_CHARS

# JWT Token Expiration (in seconds)
JWT_ACCESS_TOKEN_EXPIRE_SECONDS=3600
JWT_REFRESH_TOKEN_EXPIRE_SECONDS=604800

# CORS Allowed Origins (comma-separated for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Application Environment
ENVIRONMENT=development
